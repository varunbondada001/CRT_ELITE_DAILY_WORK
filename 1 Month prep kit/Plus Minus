class Result {

    public static void plusMinus(List<Integer> arr) {
    int n = arr.size();
    float pos = 0;
    float neg = 0;
    float zero = 0;
        for(int num:arr){
            if(num>0){
                pos+=1;
            }
            else if(num<0){
                neg+=1;
            }
            else{
               zero++;
            }
        }
        System.out.println(pos/n);
        System.out.println(neg/n);
        System.out.println(zero/n);
    }

}
